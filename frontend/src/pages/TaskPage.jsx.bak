const BusinessCard = ({ item }) => {
  // item.icon_name ã‹ã‚‰ Lucide ã‚¢ã‚¤ã‚³ãƒ³ã‚’å–å¾—
  const Icon = LucideIcons[item.icon_name] || LucideIcons.HelpCircle;
  const spanClass = ""; // å¿…è¦ãªã‚‰ item.size ãªã©ã‚’è¿½åŠ ã—ã¦åˆ¶å¾¡

  const triggerMission = async (actionType) => {
    const token = localStorage.getItem("token");
    if (!token) return;
    try {
      const res = await axiosClient.post(`missions/trigger/`,
        { action_type: actionType }
      );
      console.log("ğŸ“¥ Mission Trigger API Response:", res.data); // Log mission trigger response
    } catch (err) {
      console.error("Mission trigger error:", err);
    }
  };

  const handleClick = () => {
    logInteraction('task', item.id, item.title);

    // âœ… ãƒŸãƒƒã‚·ãƒ§ãƒ³ãƒˆãƒªã‚¬ãƒ¼
    if (item.title === 'å¥åº·è¦³å¯Ÿ') triggerMission('health_check_click');
    if (item.title === 'å€‹äººå®Ÿç¸¾å ±å‘Š') triggerMission('individual_report_click');

    if (!item.url) return;
    if (item.url.startsWith("/")) {
      window.location.href = item.url;
    } else {
      window.open(item.url, "_blank");
    }
  };

  return (
    <button
      onClick={handleClick}
      className={`w-full flex flex-col items-center justify-center p-4 h-32 pokepoke-card relative ${spanClass}`}
    >
      <div className={`mb-3 flex items-center justify-center p-3 bg-gray-50/50 rounded-2xl shadow-inner ${item.color}`}>
        <Icon size={32} />
      </div>

      <p className="text-[13px] font-black text-gray-800 text-center leading-tight">
        {item.title}
      </p>
    </button>
  );
};



